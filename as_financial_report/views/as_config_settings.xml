<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="as_res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.account.intrastat</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='allow_import']" position="after">
        <div class="col-12 col-lg-6 o_setting_box">
          <div class="o_setting_left_pane">
            <field name="group_ediat_account_posted" />
          </div>
          <div class="o_setting_right_pane">
            <label for="group_ediat_account_posted" />
            <div class="text-muted">
              Grupo de editar campos en asiento posteado
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>