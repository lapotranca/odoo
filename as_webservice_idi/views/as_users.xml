<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario usuario, campos adicionales -->
        <record id="res_users_as_form" model="ir.ui.view">
            <field name="name">as.res.users.form</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="after">
                    <page name="as_webservice_idi" string="IDI">
                        <group name="seguridad" string="Seguridad">
                            <field name="as_token"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="res_users_as_tree" model="ir.ui.view">
            <field name="name">as.res.users.tree</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <field name="login_date" position="after">
                    <field name="as_token"/>
                </field>
            </field>
        </record>
    </data>
</odoo>